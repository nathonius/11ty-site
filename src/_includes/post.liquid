{%- layout 'home.liquid' -%}
{% block head %}
{{ block.super }}
<meta property="og:title" content="{{ title }}">
<meta property="og:type" content="article">
<meta property="og:url" content="{{ page.url | absolute }}">
<meta property="og:description" content="{{ summary }}">
<meta property="og:article:published_time" content="{{ date | date_to_xmlschema }}">
<meta property="og:article:author" content="Nathan Smith">
{% endblock %}
{% block styles %}
{{ block.super }}
<link rel="stylesheet" href="/post.css">
{% endblock %}
{% block sitecontent %}
<heading-anchors>
  <div class="post-wrapper">
    <h1 class="post-title">{{ title }}</h1>
    <div class="post-meta">
      <span>{{ date | date }}</span>
      <span aria-hidden="true">/</span>
      <span>tagged: {% postTags tags %}</span>
    </div>
    <div class="post-content">
      {{ content }}
    </div>
  </div>
</heading-anchors>
{% endblock %}
{% block postscripts %}
{{ block.super }}
<script src="/modules/heading-anchors.js"></script>
<script type="module" src="/modules/copy-code.js"></script>
{% endblock %}
